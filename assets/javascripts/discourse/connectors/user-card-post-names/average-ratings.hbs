<div class="average-ratings">
  {{#if user.rating_count}}
    <div class="rating-summary">
      <span class="positive">+{{user.positive_count}}</span>
      <span class="neutral">=
      {{user.neutral_count}}</span>
      <span class="negative">-{{user.negative_count}}</span>
    </div>
    <span class="rating-count">
      {{#link-to "user.feedbacks" user}}{{i18n "discourse_user_feedbacks.user_feedbacks.user_ratings_count" count=user.rating_count}}{{/link-to}}
    </span>
  {{/if}}
</div>
